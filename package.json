{
  "name": "nexo-editor-root",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "pkg:prepare": "cd package && changeset && changeset version",
    "pkg:preinstall:dev": "npm i && cd package && npm i && ../demo && npm i",
