    "pkg:build": "cd package && npm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.2.1",
    "sass-embedded": "^1.90.0"
  },
  "dependencies": {
    "@vitejs/plugin-react-swc": "^4.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
